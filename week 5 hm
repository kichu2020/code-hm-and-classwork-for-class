def hour_glass(n):
    l2 = []
    r_l2=[]
    for i in range(1,n+1):
        answer = ""
        for j in range(1,n+2-i):
            answer += f'{j} '

        l2.append(answer.strip())
        r_l2.append(answer[::-1].strip())
    r_l2=r_l2[:-1]
    r_l2.reverse()
#     return l2 + r_l2
