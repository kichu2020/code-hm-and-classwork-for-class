n = int(input("Enter your number:  "))
def alphabet_pyramid(x):
    f=1
    for i in range(1,n+1):
        z = 96+i
        y = chr(z) * f
        print(y.center(40))
        f+=2

    for gh in range(1,n+1):
        u=123-gh
        print((chr(u)*(f-2)).center(40))
        f-=2
    return x
y = alphabet_pyramid(n)







